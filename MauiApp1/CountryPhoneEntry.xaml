<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CountryPhoneEntry"
             x:Name="this">

    <!-- Main Layout -->
    <Grid>
        <!-- Main Input -->
        <Frame x:Name="MainInputFrame"
               BackgroundColor="White" 
               Padding="5" 
               BorderColor="LightGray"
               CornerRadius="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" 
                      HeightRequest="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image x:Name="SelectedFlagImage" 
                           Grid.Column="0"
                           HeightRequest="20" 
                           WidthRequest="30" 
                           Margin="5,0,5,0" 
                           VerticalOptions="Center" />

                    <Image Grid.Column="1"
                           Source="arrow_down.png"
                           HeightRequest="12"
                           WidthRequest="12"
                           Margin="0,0,5,0"
                           VerticalOptions="Center">
                        <Image.Triggers>
                            <DataTrigger TargetType="Image"
                                        Binding="{Binding IsPopupVisible}"
                                        Value="True">
                                <Setter Property="Rotation" Value="180" />
                            </DataTrigger>
                        </Image.Triggers>
                    </Image>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCountryButtonClicked" />
                    </Grid.GestureRecognizers>
                </Grid>

                <Entry x:Name="PhoneNumberEntry" 
                       Grid.Column="1" 
                       Placeholder="Enter phone number" 
                       Text="{Binding PhoneNumber, Mode=TwoWay}" 
                       TextChanged="OnPhoneNumberTextChanged" 
                       VerticalOptions="Center" 
                       TextColor="Black" />
            </Grid>
        </Frame>

        <!-- Popup Overlay -->
        <Grid x:Name="PopupOverlay"
              IsVisible="{Binding IsPopupVisible}"
              BackgroundColor="#80000000"
              InputTransparent="False"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPopupBackgroundTapped" />
            </Grid.GestureRecognizers>

            <!-- Dropdown Content -->
            <Grid x:Name="DropdownContent" 
                  VerticalOptions="Start"
                  HorizontalOptions="Center">
                <Frame x:Name="CountryDropdownFrame"
                       BackgroundColor="White"
                       CornerRadius="20"
                       HasShadow="True"
                       Padding="0"
                       MaximumHeightRequest="300"
                       Margin="0,45,0,0">

                    <Grid RowDefinitions="Auto,*" 
                          Padding="10">
                        <SearchBar x:Name="SearchEntry" 
                                  Grid.Row="0" 
                                  Placeholder="Search countries..." 
                                  TextChanged="OnSearchTextChanged" 
                                  Margin="0,0,0,10" 
                                  BackgroundColor="White" 
                                  TextColor="Black" />

                        <CollectionView x:Name="CountryListView" 
                                      Grid.Row="1" 
                                      ItemsSource="{Binding FilteredCountries}"
                                      SelectionMode="Single"
                                      SelectionChanged="OnCountrySelectionChanged">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding FlagUrl}" 
                                               HeightRequest="20" 
                                               WidthRequest="30" 
                                               VerticalOptions="Center" />

                                        <Label Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               FontSize="14"
                                               Margin="10,0,0,0"
                                               VerticalOptions="Center" 
                                               TextColor="Black" />

                                        <Label Grid.Column="2" 
                                               Text="{Binding CallingCode}" 
                                               FontSize="14"
                                               TextColor="Gray"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </Grid>
</ContentView>