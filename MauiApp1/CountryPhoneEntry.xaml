<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CountryPhoneEntry"
             BackgroundColor="Transparent">

    <ContentView.Resources>
        <Style x:Key="BaseEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="#1A1A1A"/>
            <Setter Property="PlaceholderColor" Value="#999999"/>
            <Setter Property="FontFamily" Value="OpenSansRegular"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <Style x:Key="CountryItemStyle" TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#F5F5F5" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,Auto" Padding="16,8" RowSpacing="4">
        <!-- Main Input Area -->
        <Border Grid.Row="0"
                Stroke="#E5E5E5"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12">
            <Grid ColumnDefinitions="Auto,*" 
                  ColumnSpacing="8" 
                  Padding="12,8"
                  HeightRequest="48">
                <!-- Country Selector -->
                <Grid Grid.Column="0"
                      ColumnDefinitions="Auto,Auto" 
                      ColumnSpacing="4">
                    <Image x:Name="SelectedFlagImage"
                           Grid.Column="0"
                           HeightRequest="20"
                           WidthRequest="30"
                           Aspect="AspectFit"
                           VerticalOptions="Center"/>
                    <Button x:Name="CountryButton"
                            Grid.Column="1"
                            Text="▼"
                            FontSize="12"
                            Clicked="OnCountryButtonClicked"
                            BackgroundColor="Transparent"
                            TextColor="#666666"
                            Padding="4,0"
                            VerticalOptions="Center"/>
                </Grid>

                <!-- Phone Number Entry -->
                <Entry x:Name="PhoneNumberEntry"
                       Grid.Column="1"
                       Style="{StaticResource BaseEntryStyle}"
                       Placeholder="Phone number"
                       Keyboard="Telephone"
                       TextChanged="OnPhoneNumberTextChanged"/>
            </Grid>
        </Border>

        <!-- Country Selection Popup -->
        <Border x:Name="CountryListBorder"
                Grid.Row="1"
                IsVisible="False"
                Stroke="#E5E5E5"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="White"
                Margin="0,4">
            <Grid RowDefinitions="Auto,*" 
                  RowSpacing="8" 
                  Padding="20">
                <!-- Search Box -->
                <Border Grid.Row="0"
                        Stroke="#E5E5E5"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        Padding="8,0"
                        HeightRequest="40">
                    <Entry x:Name="SearchEntry"
                           Style="{StaticResource BaseEntryStyle}"
                           Placeholder="Search country or code"
                           TextChanged="OnSearchTextChanged"/>
                </Border>

                <!-- Countries List -->
                <CollectionView x:Name="CountryListView"
                              Grid.Row="1"
                              ItemsSource="{Binding FilteredCountries}"
                              SelectionMode="Single"
                              SelectionChanged="OnCountrySelectionChanged"
                              HeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Style="{StaticResource CountryItemStyle}"
                                  ColumnDefinitions="Auto,*,Auto" 
                                  Padding="8,12" 
                                  ColumnSpacing="12">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCountryItemTapped" />
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0"
                                       Source="{Binding FlagUrl}"
                                       HeightRequest="20"
                                       WidthRequest="30"
                                       Aspect="AspectFit"/>
                                <Label Text="{Binding Name}"
                                       Grid.Column="1"
                                       TextColor="#1A1A1A"
                                       FontSize="16"
                                       FontFamily="OpenSansRegular"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding CallingCode}"
                                       Grid.Column="2"
                                       TextColor="#666666"
                                       FontSize="14"
                                       FontFamily="OpenSansRegular"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Validation Message -->
        <Label x:Name="ValidationMessage"
               Grid.Row="2"
               TextColor="Red"
               FontSize="14"
               FontFamily="OpenSansRegular"
               IsVisible="False"
               Margin="16,4,16,0"/>
    </Grid>
</ContentView>
